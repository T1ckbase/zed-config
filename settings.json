// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "theme": "VSCode Default Dark Modern",
  "icon_theme": "Material Icon Theme",
  "experimental.theme_overrides": {
    // "ghost_element.hover": "#373A3D",
    // "syntax": {
    //   "sdkfjafsd": {
    //     "color": "#ff0000",
    //     "background_color": null,
    //     "font_style": null,
    //     "font_weight": null
    //   }
    // }
  },
  "base_keymap": "VSCode",
  "auto_update": false,
  "relative_line_numbers": false,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "toggle_relative_line_numbers": true
  },
  "vertical_scroll_margin": 4,
  "lsp_highlight_debounce": 0,
  "show_edit_predictions": false,
  "edit_predictions": {
    "mode": "eager"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": "error"
    }
  },
  "project_panel": {
    "entry_spacing": "standard"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "cursor_blink": false,
  "buffer_font_size": 14,
  "buffer_font_weight": 300,
  "buffer_line_height": { "custom": 1.2 },
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_fallbacks": ["Symbols Nerd Font"],
  "ui_font_size": 15,
  "ui_font_family": "JetBrainsMonoNL Nerd Font",
  // "ui_font_weight": 300,
  "unnecessary_code_fade": 0.667,
  "current_line_highlight": "none",
  "format_on_save": "off",
  "languages": {
    "HTML": {
      "format_on_save": "prettier",
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    },
    "SCSS": {
      "tab_size": 2
    },
    "JSON": {
      "format_on_save": "prettier"
    },
    "JSONC": {
      "format_on_save": "prettier"
    },
    "Lua": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2
    }
  },
  "terminal": {
    "detect_venv": "off",
    "shell": {
      "program": "pwsh"
    },
    "toolbar": {
      "breadcrumbs": false
    },
    "line_height": { "custom": 1.2 },
    "default_height": 160
  },
  "remove_trailing_whitespace_on_save": false
  // temp
