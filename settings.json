{
  "auto_update_extensions": {
    "vscode-dark-modern": false
  },
  "theme": "VSCode Dark Modern",
  "icon_theme": "Zed (Default)",
  "base_keymap": "VSCode",
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_fallbacks": ["Source Han Sans TC", "Symbols Nerd Font"],
  "buffer_font_features": {
    "calt": 0
  },
  "buffer_font_size": 14,
  // "buffer_font_weight": 600,
  "buffer_line_height": { "custom": 1.2 },
  "ui_font_family": "JetBrainsMonoNL Nerd Font",
  "ui_font_fallbacks": ["Source Han Sans TC", "Symbols Nerd Font"],
  // "ui_font_weight": 700,
  "ui_font_size": 15,
  "agent_ui_font_size": 15,
  "agent_buffer_font_size": 12,
  "unnecessary_code_fade": 0.4,
  "vim_mode": true,
  "cursor_blink": false,
  "hide_mouse": "never",
  "current_line_highlight": "none",
  "rounded_selection": false,
  "minimum_contrast_for_highlights": 0,
  "show_edit_predictions": false,
  "calls": {
    "mute_on_join": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "code_actions": true
  },
  "scrollbar": {
    "show": "auto"
  },
  "vertical_scroll_margin": 4,
  "horizontal_scroll_margin": 8,
  "project_panel": {
    "entry_spacing": "standard",
    "scrollbar": {
      "show": "auto"
    }
  },
  "outline_panel": {
    "scrollbar": {
      "show": "auto"
    }
  },
  "agent": {
    "default_profile": "ask",
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-4.1"
    },
    "default_model": {
      "provider": "OpenCode Zen",
      "model": "big-pickle"
    },
    "use_modifier_to_send": true
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": false
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  // "remove_trailing_whitespace_on_save": false,
  "format_on_save": "off",
  "preferred_line_length": 160,
  "tab_size": 2,
  // "telemetry": {
  //   "diagnostics": false,
  //   "metrics": false
  // },
  "auto_update": true,
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": "error"
    }
  },
  "edit_predictions": {
    "mode": "eager"
  },
  "status_bar": {
    "line_endings_button": true
  },
  "terminal": {
    "shell": {
      "program": "pwsh"
    },
    "default_height": 160,
    "line_height": { "custom": 1.2 },
    "detect_venv": "off",
    "scrollbar": {
      "show": "auto"
    },
    "font_family": "Berkeley Mono",
    "font_fallbacks": ["Source Han Sans TC", "Symbols Nerd Font"],
    // "font_weight": 500,
    "minimum_contrast": 0
  },
  "file_types": {
    "JSON": [".prettierrc"],
    "JSONC": ["wrangler.json"]
  },
  "node": {
    "ignore_system_version": true
  },
  "auto_install_extensions": {
    "astro": true,
    "dockerfile": true,
    "git-firefly": true,
    "glsl": true,
    "html": true,
    "lua": true,
    "zig": true,
    "emmet": true,
    "biome": true,
    "deno": true,
    "pyrefly": true,
    "opencode": true,
    "svelte": true,
    "json": true,
    "proto": true,
    "toml": true
  },
  "completions": {
    // "lsp_insert_mode": "insert"
  },
  "languages": {
    "JSON": {
      "format_on_save": "on"
    },
    "JSONC": {
      "format_on_save": "on"
    },
    "Lua": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Rust": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Zig": {
      "formatter": [
        {
          "code_action": "source.organizeImports"
        },
        "language_server"
      ],
      "format_on_save": "on"
    }
  },
  "language_models": {
    "openai_compatible": {
      "OpenCode Zen": {
        "api_url": "https://opencode.ai/zen/v1",
        "available_models": [
          {
            "name": "grok-code",
            "display_name": "Grok Code Fast 1",
            "max_tokens": 256000,
            "max_output_tokens": 256000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          },
          {
            "name": "big-pickle",
            "display_name": "Big Pickle",
            "max_tokens": 200000,
            "max_output_tokens": 128000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          }
        ]
      }
    }
  },
  "lsp": {
    "basedpyright": {
      // "binary": {
      //   "path": "uvx",
      //   "arguments": [
      //     "--quiet",
      //     "--from",
      //     "basedpyright",
      //     "basedpyright-langserver",
      //     "--stdio"
      //   ]
      // },
      "settings": {
        "python": {
          "pythonPath": ".venv/Scripts/python"
        },
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false
          }
        }
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    // "emmet-language-server": {
    //   // "binary": {
    //   //   "path": "bunx",
    //   //   "arguments": [
    //   //     "--silent",
    //   //     "--bun",
    //   //     "--package",
    //   //     "@olrtg/emmet-language-server",
    //   //     "--stdio"
    //   //   ]
    //   // }
    //   "binary": {
    //     "path": "deno",
    //     "arguments": [
    //       "run",
    //       "--quiet",
    //       "--reload",
    //       "--no-prompt",
    //       "--no-lock",
    //       "--allow-env",
    //       "npm:@olrtg/emmet-language-server",
    //       "--stdio"
    //     ]
    //   }
    // },
    // "pylsp": {
    //   "binary": {
    //     "path": "uvx",
    //     "arguments": ["--quiet", "--from", "python-lsp-server", "pylsp"]
    //   }
    // },
    "pyrefly": {
      "binary": {
        "path": "uvx",
        "arguments": ["--quiet", "pyrefly", "lsp"]
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "zls": {
      "binary": {
        "path": "zls"
      },
      "settings": {
        "enable_build_on_save": true
        // "zls": {
        //   "zig_exe_path": "C:\\Users\\Nah\\scoop\\shims\\zig.exe" // zig-dev
        // }
      }
    }
  },
  "vim": {
    "toggle_relative_line_numbers": true,
    // "use_system_clipboard": "on_yank",
    "highlight_on_yank_duration": 80
  },
  "context_servers": {},
  "agent_servers": {
    // "gemini": {
    //   "ignore_system_version": false
