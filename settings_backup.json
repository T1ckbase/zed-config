  "language_models": {
    "openai_compatible": {
      "OpenCode Zen": {
        "api_url": "https://opencode.ai/zen/v1",
        "available_models": [
          {
            "name": "grok-code",
            "display_name": "Grok Code Fast 1",
            "max_tokens": 256000,
            "max_output_tokens": 256000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          },
          {
            "name": "big-pickle",
            "display_name": "Big Pickle",
            "max_tokens": 200000,
            "max_output_tokens": 128000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          }
        ]
      }
    }
  },
  "agent_servers": {
    // "gemini": {
