// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_font_features": {
    "calt": 0
  },
  "auto_install_extensions": {
    "json": true
  },
  "auto_update_extensions": {
    "vscode-dark-modern": false
  },
  "theme": "VSCode Dark Modern",
  "icon_theme": "Material Icon Theme",
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#FFFFFF06", // editor.wordHighlightBackground
    "editor.document_highlight.write_background": "#FFFFFF06", // editor.wordHighlightStrongBackground
    "editor.document_highlight.bracket_background": "#0064001a" // editorBracketMatch.background
    // "ghost_element.hover": "#373A3D",
    // "syntax": {
    //   "sdkfjafsd": {
    //     "color": "#ff0000",
    //     "background_color": null,
    //     "font_style": null,
    //     "font_weight": null
    //   }
    // }
  },
  "base_keymap": "VSCode",
  "auto_update": true,
  "relative_line_numbers": false,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "toggle_relative_line_numbers": true
  },
  "vertical_scroll_margin": 4,
  "horizontal_scroll_margin": 8,
  "show_edit_predictions": false,
  "edit_predictions": {
    "mode": "eager"
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "agent": {
    "use_modifier_to_send": true,
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-4.1"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "OpenCode Zen",
      "model": "grok-code"
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": "error"
    }
  },
  "project_panel": {
    "entry_spacing": "standard"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "cursor_blink": false,
  "buffer_font_size": 14,
  // "buffer_font_weight": 600,
  "buffer_line_height": { "custom": 1.2 },
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_fallbacks": ["Source Han Sans TC", "Symbols Nerd Font"],
  "ui_font_size": 15,
  "ui_font_family": "JetBrainsMonoNL Nerd Font",
  "ui_font_fallbacks": ["Source Han Sans TC", "Symbols Nerd Font"],
  // "ui_font_weight": 700,
  "agent_ui_font_size": 15,
  "unnecessary_code_fade": 0.5,
  "current_line_highlight": "none",
  "hide_mouse": "never",
  "format_on_save": "off",
  "file_types": {
    "JSON": [".prettierrc"]
  },
  "languages": {
    "Astro": {
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    },
    "HTML": {
      "formatter": "prettier",
      "format_on_save": "on",
      "tab_size": 2
    },
    "JSON": {
      "formatter": "prettier",
      "format_on_save": "on"
    },
    "JSONC": {
      "formatter": "prettier",
      "format_on_save": "on"
    },
    "Lua": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2
    },
    "Rust": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "SCSS": {
      "tab_size": 2
    },
    "Zig": {
      "formatter": [
        {
          "code_action": "source.organizeImports"
        },
        "language_server"
      ],
      "format_on_save": "on"
    }
  },
  "terminal": {
    // "font_weight": 500,
    "font_family": "Berkeley Mono",
    "font_fallbacks": ["Source Han Sans TC", "Symbols Nerd Font"],
    "detect_venv": "off",
    "shell": {
      "program": "pwsh"
    },
    "toolbar": {
      "breadcrumbs": false
    },
    "line_height": { "custom": 1.2 },
    "default_height": 160
  },
  "toolbar": {
    "code_actions": true
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": false
  },
  "completions": {
    // "lsp_insert_mode": "insert"
  },
