// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "EmptyPane || SharedScreen || MarkdownPreview || vim_mode == normal",
    "bindings": {
      "space f f": "file_finder::Toggle",
      "space f w": [
        "task::Spawn",
        { "task_name": "Find Words", "reveal_target": "center" }
      ],
      "space c": "pane::CloseActiveItem",
      "space e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual || vim_mode == insert)",
    "bindings": {
      "alt-k": "editor::MoveLineUp",
      "alt-j": "editor::MoveLineDown",
      "shift-alt-k": "editor::DuplicateLineUp",
      "shift-alt-j": "editor::DuplicateLineDown",
      "ctrl-alt-shift-k": "editor::AddSelectionAbove",
      "ctrl-alt-shift-j": "editor::AddSelectionBelow"
      // "alt-l": "pane::ActivateNextItem",
      // "alt-h": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-c": "editor::Copy", // vim default: return to normal mode
      // "ctrl-x": "editor::Cut",           // vim default: decrement
      "ctrl-v": "editor::Paste" // vim default: PushLiteral
      // "ctrl-y": "editor::Undo",          // vim default: line up
      // "ctrl-f": "buffer_search::Deploy" // vim default: page down
      // "ctrl-o": "workspace::Open",       // vim default: go back
      // "ctrl-a": "editor::SelectAll",     // vim default: increment
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore",
      // "k j": "vim::NormalBefore",
      "ctrl-j": "editor::NewlineBelow"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-y": ["workspace::SendKeystrokes", "y $"],
      "g o": ["workspace::SendKeystrokes", "g g 0"],
      "space f b": "tab_switcher::ToggleAll",
      "space m p": "markdown::OpenPreviewToTheSide"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": ["vim::PushAddSurrounds", {}]
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward"
    }
  },
  {
    "context": "Editor && !VimControl",
    "bindings": {
      "ctrl-alt-shift-up": "editor::AddSelectionAbove", // Insert Cursor Above
      "ctrl-alt-shift-down": "editor::AddSelectionBelow", // Insert Cursor Below
      "shift-alt-up": "editor::DuplicateLineUp",
      "shift-alt-down": "editor::DuplicateLineDown",
      "ctrl-shift-enter": "editor::NewlineAbove",
      "alt-enter": "assistant::InlineAssist"
    }
  }

  // {
  //   "context": "Pane > Editor",
  //   "bindings": {
  //     "ctrl-enter": "editor::NewlineBelow"
  //   }
  // }
]
